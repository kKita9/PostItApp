@page "/home"
@inject NavigationManager NavigationManager

<div class="main-container">
    <!-- Left panel -->
    <div class="left-panel">
        <h3>PostItApp</h3>
        <ul>
            <li><a href="#">Twój profil</a></li>
            <li><a href="#">Posty</a></li>
            <li><a href="#">Znajomi</a></li>
        </ul>
    </div>

    <!-- Main panel -->
    <div class="center-panel">
        @foreach (var post in posts)
        {
            <div class="post">
                <!-- Post header -->
                <div class="post-header">
                    <div class="user-img">jpg</div>
                    <div>
                        <strong>@post.UserName</strong><br />
                        <small>@post.Date</small>
                    </div>
                </div>
                <!-- Content -->
                <div class="post-content">
                    @post.Content
                </div>
                <!-- Likes and comments -->
                <div class="post-actions">
                    <div>
                        <span>🖤 @post.Likes</span>
                    </div>
                    <div>
                        <span>💬 @post.Comments.Count</span>
                    </div>
                </div>
                <!-- Comment section -->
                <div class="comments-section">
                    <strong>Komentarze:</strong>
                    <ul>
                        @foreach (var comment in post.Comments)
                        {
                            <li class="comment-item">
                                <strong>@comment.UserName</strong>: @comment.Content <br />
                                <small>@comment.Date</small>
                            </li>
                        }
                    </ul>
                    <input type="text" placeholder="Dodaj komentarz..." class="comment-input" />
                </div>
            </div>
        }
    </div>

    <!-- Right panel -->
    <div class="right-panel">
        <h4>Znajomi</h4>
        <ul class="friends-list">
            @foreach (var friend in friends)
            {
                <li>
                    <img src="https://placekitten.com/40/40" alt="Avatar" class="friend-img" />
                    <span class="friend-name">@friend.Name</span>
                </li>
            }
        </ul>
    </div>
</div>

